header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav 
        ul 
            li 
                a(href="/videos/search")
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video 
                li 
                    a(href="/users/logout") Log out
                li 
                    a(href=`users/${user._id}/profile/edit`) Edit profile
                li 
                    a(href=`/users/${user._id}/profile`)
                        if !user.avatarUrl 
                            span your profile
                        else
                            if user.isO_Auth_profile 
                                img.header__avatar(src=user.avatarUrl)
                            else 
                                img.header__avatar(src="/" + user.avatarUrl)
            else
                li 
                    a(href="/users/login") Log in
                li 
                    a(href="/users/join") Join now
    